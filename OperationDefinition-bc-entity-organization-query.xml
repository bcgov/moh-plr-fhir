<?xml version="1.0" encoding="UTF-8"?>

<OperationDefinition xmlns="http://hl7.org/fhir">
  <id value="bc-entity-organization-query"/>
  <text>
    <status value="extensions"/><div xmlns="http://www.w3.org/1999/xhtml">Placeholder</div>
  </text>
  <url value="http://hlth.gov.bc.ca/fhir/provider/OperationDefinition/bc-entity-organization-query"/>
  <version value="1.0.0"/>
  <name value="OrganizationEntityQuery"/>
  <title value="Query for an organization without returning associations"/>
  <status value="draft"/>
  <kind value="query"/>
  <date value="2023-09-07T20:12:30+00:00"/>
  <publisher value="BC Ministry of Health"/>
  <contact>
    <name value="BC Ministry of Health"/>
    <telecom>
      <system value="url"/>
      <value value="https://www2.gov.bc.ca/gov/content/governments/organizational-structure/ministries-organizations/ministries/health"/>
    </telecom>
  </contact>
  <description value="This operation is used to query for an organization and will return the information for that organization without following associations to other providers, organizations, or facilities."/>
  <jurisdiction>
    <coding>
      <system value="urn:iso:std:iso:3166"/>
      <code value="CA"/>
      <display value="Canada"/>
    </coding>
  </jurisdiction>
  <code value="entityQuery"/>
  <resource value="Organization"/>
  <system value="false"/>
  <type value="true"/>
  <instance value="true"/>
  <parameter>
    <name value="identifier"/>
    <use value="in"/>
    <min value="0"/>
    <max value="1"/>
    <documentation value="String identifier value"/>
    <type value="string"/>
    <searchType value="string"/>
  </parameter>
  <parameter>
    <name value="identifier-type"/>
    <use value="in"/>
    <min value="0"/>
    <max value="1"/>
    <documentation value="String code for identifier type (e.g. ORGID), mandatory if identifier is specified. Mapping to Organization.identifier.type.coding.code"/>
    <type value="string"/>
    <searchType value="token"/>
  </parameter>
  <parameter>
    <name value="name"/>
    <use value="in"/>
    <min value="0"/>
    <max value="1"/>
    <documentation value="Search for organizations with the specified name, mandatory if no identifier specified. May use trailing wildcards, e.g. Clinic*"/>
    <type value="string"/>
    <searchType value="string"/>
  </parameter>
  <parameter>
    <name value="description"/>
    <use value="in"/>
    <min value="0"/>
    <max value="1"/>
    <documentation value="Search for organizations with the specified description, mapping to BCOrganization.alias. May use trailing wildcards, e.g. Clinic*"/>
    <type value="string"/>
    <searchType value="string"/>
  </parameter>
  <parameter>
    <name value="role"/>
    <use value="in"/>
    <min value="0"/>
    <max value="1"/>
    <documentation value="Search for organizations with the specified role type code, mandatory if no identifier specified, mapping to Organization.type"/>
    <type value="string"/>
    <searchType value="token"/>
  </parameter>
  <parameter>
    <name value="address-city"/>
    <use value="in"/>
    <min value="0"/>
    <max value="1"/>
    <documentation value="Search for organizations with the specified city."/>
    <type value="string"/>
    <searchType value="string"/>
  </parameter>
  <parameter>
    <name value="withHistory"/>
    <use value="in"/>
    <min value="0"/>
    <max value="1"/>
    <documentation value="true or false, The withHistory parameter instructs PLR to search through historical records for matching attributes. Only the current data is returned."/>
    <type value="boolean"/>
  </parameter>
  <parameter>
    <name value="bundle"/>
    <use value="out"/>
    <min value="1"/>
    <max value="1"/>
    <documentation value="The Response Bundle with the OperationOutcome and the list of BCOrganizationBundle found by the search."/>
    <type value="Bundle"/>
  </parameter>
</OperationDefinition>