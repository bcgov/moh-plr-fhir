  <url value="http://hlth.gov.bc.ca/fhir/provider/OperationDefinition/bc-extended-practitioner-query"/>
  <version value="1.0.0"/>
  <name value="PractitionerExtendedQuery"/>
  <title value="Query for a Practitioner that returns associated resources"/>
  <status value="draft"/>
  <kind value="query"/>
  <date value="2023-10-26T20:17:55+00:00"/>
  <publisher value="BC Ministry of Health"/>
  <contact>
    <name value="BC Ministry of Health"/>
    <telecom>
      <system value="url"/>
      <value value="https://www2.gov.bc.ca/gov/content/governments/organizational-structure/ministries-organizations/ministries/health"/>
    </telecom>
  </contact>
  <description value="This operation is used to query for a provider and will return the information for that provider along with any instances that can be found by following associations to other providers, organizations, or facilities."/>
  <jurisdiction>
    <coding>
      <system value="urn:iso:std:iso:3166"/>
      <code value="CA"/>
      <display value="Canada"/>
    </coding>
  </jurisdiction>
  <code value="extendedQuery"/>
  <resource value="Practitioner"/>
  <system value="false"/>
  <type value="true"/>
  <instance value="true"/>
  <parameter>
    <name value="identifier"/>
    <use value="in"/>
    <min value="0"/>
    <max value="1"/>
    <documentation value="String, representing the full identifier value with system and value, e.g. identifier=[system]|[value]"/>
    <type value="string"/>
    <searchType value="string"/>
  </parameter>
  <parameter>
    <name value="family"/>
    <use value="in"/>
    <min value="0"/>
    <max value="1"/>
    <documentation value="Search for practitioners with the specified surname. May use trailing wildcards, e.g. Smith*"/>
    <type value="string"/>
    <searchType value="string"/>
  </parameter>
  <parameter>
    <name value="given"/>
    <use value="in"/>
    <min value="0"/>
    <max value="1"/>
    <documentation value="Search for practitioners with the specified given name. May use trailing wildcards, e.g. Ann*"/>
    <type value="string"/>
    <searchType value="string"/>
  </parameter>
  <parameter>
    <name value="status"/>
    <use value="in"/>
    <min value="0"/>
    <max value="1"/>
    <documentation value="Search for practitioners with a license that has the specified status."/>
    <type value="string"/>
    <searchType value="token"/>
  </parameter>
  <parameter>
    <name value="address-city"/>
    <use value="in"/>
    <min value="0"/>
    <max value="1"/>
    <documentation value="Search for practitioners with an address that includes the given city."/>
    <type value="string"/>
    <searchType value="string"/>
  </parameter>
  <parameter>
    <name value="gender"/>
    <use value="in"/>
    <min value="0"/>
    <max value="1"/>
    <documentation value="Search for practitioners with the specified gender."/>
    <type value="string"/>
    <searchType value="token"/>
  </parameter>
  <parameter>
    <name value="role"/>
    <use value="in"/>
    <min value="0"/>
    <max value="1"/>
    <documentation value="Search for practitioners that have an associated PractitionerRole code with the specified value (e.g. MD or RN)"/>
    <type value="string"/>
    <searchType value="token"/>
  </parameter>
  <parameter>
    <name value="communication"/>
    <use value="in"/>
    <min value="0"/>
    <max value="1"/>
    <documentation value="Search for practitioners who can communicate with the specified language code. May be a comma separated list of language codes, e.g. F01,E09."/>
    <type value="string"/>
    <searchType value="token"/>
  </parameter>
  <parameter>
    <name value="expertise"/>
    <use value="in"/>
    <min value="0"/>
    <max value="1"/>
    <documentation value="Search for practitioners with a qualification that matches the specified expertise. May be a comma separated list of expertise codes, e.g. AM53,K34."/>
    <type value="string"/>
    <searchType value="token"/>
  </parameter>
  <parameter>
    <name value="status-reason"/>
    <use value="in"/>
    <min value="0"/>
    <max value="1"/>
    <documentation value="Search for practitioners with a license that has the specified status reason."/>
    <type value="string"/>
    <searchType value="token"/>
  </parameter>
  <parameter>
    <name value="withHistory"/>
    <use value="in"/>
    <min value="0"/>
    <max value="1"/>
    <documentation value="true or false, The withHistory parameter instructs PLR to search through historical records for matching attributes. Only the current data is returned."/>
    <type value="boolean"/>
  </parameter>
  <parameter>
    <name value="bundle"/>
    <use value="out"/>
    <min value="1"/>
    <max value="1"/>
    <documentation value="The Response Bundle with the OperationOutcome and the list of BCPractitionerBundle found by the search."/>
    <type value="Bundle"/>
  </parameter>
